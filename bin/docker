#!/usr/bin/env bash

godog find_by_driver.feature
if [ "$?" -ne "0" ]; then
  echo "Tests failed"
  exit 1
fi

godog find_by_location_and_time.feature
if [ "$?" -ne "0" ]; then
  echo "Tests failed"
  exit 1
fi

IMAGE="phedoreanu/journeys:1.0.0"
echo "Building $IMAGE"

docker build -t ${IMAGE} . && docker push ${IMAGE}
